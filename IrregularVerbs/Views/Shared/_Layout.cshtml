<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/themes/base/my-style")
</head>
<body>
    <div class="layout">
        <div class="wrap">
            <ul class="menu">
                <li>@Html.ActionLink("Словарь", "ListOfWords", "Home")</li>
                <li>@Html.ActionLink("Добавить слово", "AddVerb", "Home")</li>
                <li>@Html.ActionLink("Тренировка", "SelectNumberLesson", "Home")</li>
            </ul>
            @RenderBody()
            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/my-script")
            @RenderSection("scripts", required: false)
        </div>
        <div class="footer">
            <p>
                Alexander Kozachek &copy; 2014</p>
        </div>
    </div>
</body>
</html>
@Scripts.Render("~/bundles/jqueryval")
